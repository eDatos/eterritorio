{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://example.com/example.json",
    "title": "Territories schema",
    "type": "object",
    "required": ["zones"],
    "properties": {
        "zones": {
            "title": "Array of zones to show to the user. Each zone contains a set of territories",
            "type": "array",
            "default": [],
            "items": {
                "title": "Zone object",
                "type": "object",
                "required": ["id", "i18n_title", "codes"],
                "properties": {
                    "id": {
                        "title": "Zone identifier",
                        "type": "string",
                        "minLength": 1
                    },
                    "i18n_title": {
                        "title": "I18n title.",
                        "type": "string",
                        "minLength": 1
                    },
                    "codes": {
                        "title": "Array of variable elements ids. The can be a string or an object to group locations",
                        "type": "array",
                        "items": {
                            "anyOf": [
                                {
                                    "title": "Variable element id",
                                    "type": "string",
                                    "minLength": 1
                                },
                                {
                                    "title": "Variable element object",
                                    "type": "object",
                                    "required": ["id", "i18n_title", "children"],
                                    "properties": {
                                        "id": {
                                            "title": "Group id",
                                            "type": "string",
                                            "minLength": 1
                                        },
                                        "i18n_title": {
                                            "title": "I18n title of the group",
                                            "type": "string",
                                            "minLength": 1
                                        },
                                        "children": {
                                            "title": "List of variable element ids",
                                            "type": "array",
                                            "items": {
                                                "title": "Variable element id",
                                                "type": "string",
                                                "minLength": 1
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        }
    }
}
